#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

set -e

echo "ğŸ” pre-commit: lint (staged files)..."
npx --no-install lint-staged

echo "ğŸ” pre-commit: lint (full)..."
npm run lint

echo "ğŸ” pre-commit: lint (style)..."
npm run lint:style

echo "ğŸ” pre-commit: typecheck..."
npm run typecheck

echo "ğŸ” pre-commit: test..."
npm run test -- --passWithNoTests

echo "ğŸ” pre-commit: build..."
npm run build

echo "âœ… pre-commit passed"
